<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>Product</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body>
    <%- include("./partials/nav") %>
    <div class="container mt-3">
      <form id="updateForm" action="/update" method="post">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Images</th>
              <th>Name</th>
              <th>Price</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { %>
            <tr id="<%= product._id %>">
              <th>
                <img
                  src="<%= product.Image %>"
                  class="image"
                  alt="Product Image"
                  style="width: 100px"
                />
              </th>
              <td class="editable" data-field="name"><%= product.name %></td>
              <td class="editable" data-field="price"><%= product.price %></td>
              <td class="editable" data-field="description">
                <%= product.description %>
              </td>
              <td>
                <% if (locals.user) { %>
                  <button type="button" class="btn btn-warning edit">Edit</button>
                  <a href="/clear/<%= product._id %>" class="btn btn-danger"
                    >Delete</a
                  >
                <% } %>
                <input type="hidden" name="ids[]" value="<%= product._id %>" />
                <input
                  type="hidden"
                  name="names"
                  value="<%= product.name %>"
                />
                <input
                  type="hidden"
                  name="prices"
                  value="<%= product.price %>"
                />
                <input
                  type="hidden"
                  name="descriptions"
                  value="<%= product.description %>"
                />
                <button
                  type="submit"
                  class="btn btn-primary save"
                  style="display: none"
                >
                  Save
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </form>
    </div>
    <%- include("./partials/script") %>
   
      <script>
      
        $(document).ready(function () {
          $(".edit").on("click", function () {
            var row = $(this).closest("tr");
            row
              .find(".editable")
              .attr("contenteditable", "true")
            row.find(".save").show();
            $(this).hide();
          });
  
          $("#updateForm").on("submit", function () {
            $("tr").each(function () {
              var row = $(this);
              row
                .find('input[name="names"]')
                .val(row.find('[data-field="name"]').text());
              row
                .find('input[name="prices"]')
                .val(row.find('[data-field="price"]').text());
              row
                .find('input[name="descriptions"]')
                .val(row.find('[data-field="description"]').text());
            });
          });
        });
      </script>
    
    </style>
  </body>
</html>
